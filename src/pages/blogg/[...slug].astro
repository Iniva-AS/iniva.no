---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Newsletter from '../../components/Newsletter.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Fetch all authors
const allAuthors = await getCollection('authors');
const author = allAuthors.find(a => a.slug === post.data.author);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Blogg', href: '/blogg' },
  { label: post.data.title, href: `/blogg/${post.slug}`, current: true }
];
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  image={post.data.image}
>
  <div class="bg-white">
    <Header />
    <Breadcrumb items={breadcrumbs} />

    <div class="bg-white px-6 py-32 lg:px-8">
      <div class="mx-auto max-w-3xl text-base/7 text-gray-700">
        <div class="flex items-center gap-x-2">
          {post.data.categories.map((category) => (
            <span class="text-base/7 font-semibold text-indigo-600">{category}</span>
          ))}
        </div>
        <h1 class="mt-2 text-pretty text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl">
          {post.data.title}
        </h1>

        {author && (
          <div class="mt-6 flex items-center gap-x-4">
            <img alt="" src={author.data.image} loading="lazy" class="size-12 rounded-full bg-gray-100" />
            <div class="text-sm/6">
              <p class="font-semibold text-gray-900">{author.data.name}</p>
              <p class="text-gray-600">
                {author.data.role} Â·
                <time datetime={post.data.date.toISOString()}>
                  {post.data.date.toLocaleDateString('nb-NO', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
              </p>
              {author.data.socials && (
                <div class="flex gap-x-2 mt-1">
                  {author.data.socials.linkedin && (
                    <a href={author.data.socials.linkedin} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600">
                      <span class="sr-only">LinkedIn</span>
                      <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                      </svg>
                    </a>
                  )}
                  {author.data.socials.github && (
                    <a href={author.data.socials.github} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600">
                      <span class="sr-only">GitHub</span>
                      <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
                      </svg>
                    </a>
                  )}
                  {author.data.socials.x && (
                    <a href={author.data.socials.x} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600">
                      <span class="sr-only">X</span>
                      <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M13.6823 10.6218L20.2391 3H18.6854L12.9921 9.61788L8.44486 3H3.2002L10.0765 13.0074L3.2002 21H4.75404L10.7663 14.0113L15.5685 21H20.8131L13.6819 10.6218H13.6823ZM11.5541 13.0956L10.8574 12.0991L5.31391 4.16971H7.70053L12.1742 10.5689L12.8709 11.5655L18.6861 19.8835H16.2995L11.5541 13.096V13.0956Z"/>
                      </svg>
                    </a>
                  )}
                  {author.data.socials.website && (
                    <a href={author.data.socials.website} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600">
                      <span class="sr-only">Website</span>
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                      </svg>
                    </a>
                  )}
                </div>
              )}
            </div>
          </div>
        )}

        <figure class="mt-10">
          <Image
            src={post.data.image}
            alt={post.data.title}
            loading="lazy"
            class="aspect-video w-full rounded-2xl bg-gray-50 object-cover"
            widths={[400, 800, 1200]}
            sizes="(max-width: 768px) 100vw, 896px"
          />
        </figure>

        <div class="prose prose-gray mt-10 max-w-none prose-headings:text-gray-900 prose-p:text-gray-600 prose-a:text-indigo-600 prose-strong:text-gray-900 prose-ul:text-gray-600 prose-li:text-gray-600">
          <Content />
        </div>
      </div>
    </div>

    <Newsletter />

    <Footer />
  </div>
</BaseLayout>
