---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Side ikke funnet', href: '/404', current: true }
];
---

<BaseLayout title="404 - Siden ikke funnet" description="Siden du leter etter eksisterer ikke.">
  <div class="bg-white">
    <Header />
    <Breadcrumb items={breadcrumbs} />

    <div class="mx-auto max-w-7xl px-6 pt-32 pb-32 text-center sm:pt-40 sm:pb-40 lg:px-8">
      <p class="text-base/8 font-semibold text-indigo-600">404</p>
      <h1 class="mt-4 text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl">
        Siden ikke funnet
      </h1>
      <p class="mt-6 text-lg/8 font-medium text-pretty text-gray-500 sm:text-xl/8">
        Beklager, vi kunne ikke finne siden du leter etter.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="/"
          class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
        >
          GÃ¥ tilbake til forsiden
        </a>
        <a href="/kontakt" class="text-sm/6 font-semibold text-gray-900">
          Kontakt support <span aria-hidden="true">&rarr;</span>
        </a>
      </div>
    </div>

    <Footer />
  </div>
</BaseLayout>
