---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const products = await getCollection('products');
---

<BaseLayout title="Products" description="Tools we've built to make your work easier.">
  <div class="bg-white">
    <Header />

    <div class="bg-white py-24 sm:py-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:max-w-4xl">
          <h2 class="text-pretty text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl">Our Products</h2>
          <p class="mt-2 text-lg/8 text-gray-600">Tools we've built to make your work easier.</p>
          <div class="mt-16 space-y-20 lg:mt-20">
            {products.map((product) => (
              <article class="relative isolate flex flex-col gap-8 lg:flex-row">
                <div class="relative aspect-video sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
                  <img
                    alt=""
                    src={product.data.image}
                    class="absolute inset-0 size-full rounded-2xl bg-gray-50 object-cover"
                  />
                  <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
                </div>
                <div>
                  <div class="group relative max-w-xl">
                    <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600">
                      <a href={product.data.url} target="_blank" rel="noopener noreferrer">
                        <span class="absolute inset-0" />
                        {product.data.title}
                      </a>
                    </h3>
                    <p class="mt-5 text-sm/6 text-gray-600">{product.data.description}</p>
                  </div>
                  <div class="mt-6 flex border-t border-gray-900/5 pt-6">
                    <a
                      href={product.data.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                    >
                      Visit product <span aria-hidden="true">â†’</span>
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      </div>
    </div>

    <Footer />
  </div>
</BaseLayout>
