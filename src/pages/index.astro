---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Testimonials from '../components/Testimonials.astro';
import LogoGrid from '../components/LogoGrid.astro';
import Newsletter from '../components/Newsletter.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import heroImage from '../assets/misc/ole-herland-wood2.png';

// Fetch latest 3 blog posts
const allBlogPosts = await getCollection('blog');
const latestPosts = allBlogPosts
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

// Fetch all authors
const allAuthors = await getCollection('authors');

// Fetch featured arbeid entries
const allArbeid = await getCollection('arbeid');
const featuredArbeid = allArbeid
  .filter(entry => entry.data.featured)
  .sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout>
  <div class="bg-white">
    <Header />

    <!-- Hero Section -->
    <div class="relative">
      <div class="mx-auto max-w-7xl">
        <div class="relative z-10 pt-14 lg:w-full lg:max-w-2xl">
          <svg viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true" class="absolute inset-y-0 right-8 hidden h-full w-80 translate-x-1/2 transform fill-white lg:block">
            <polygon points="0,0 90,0 50,100 0,100" />
          </svg>

          <div class="relative px-6 py-32 sm:py-40 lg:px-8 lg:py-56 lg:pr-0">
            <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-xl">
              <div class="hidden sm:mb-10 sm:flex">
                <div class="relative rounded-full px-3 py-1 text-sm/6 text-gray-500 ring-1 ring-gray-900/10 hover:ring-gray-900/20">
                  Quick3 for WooCommerce er nå live! <a href="https://quick3-for-woocommerce.no/no/" class="font-semibold whitespace-nowrap text-indigo-600"><span aria-hidden="true" class="absolute inset-0"></span>Besøk nettsiden <span aria-hidden="true">&rarr;</span></a>
                </div>
              </div>
              <h1 class="text-5xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-7xl">Vi puster liv i drømmer og produkter</h1>
              <p class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8">Teknologi er vår lidenskap og vi elsker å bygge digitale produkter. Med og for kunder.</p>
              <div class="mt-10 flex items-center gap-x-6">
                <a href="/arbeid" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Vårt arbeid</a>
                <a href="/blogg" class="text-sm/6 font-semibold text-gray-900">Les bloggen <span aria-hidden="true">→</span></a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
        <Image src={heroImage} alt="Ole Herland working outdoors" class="aspect-3/2 object-cover lg:aspect-auto lg:size-full" widths={[800, 1200, 1600]} sizes="(max-width: 1024px) 100vw, 50vw" />
      </div>
    </div>

    <!-- Logo Grid -->
    <LogoGrid />

    <!-- Featured Work Section -->
    <div class="bg-white py-24 sm:py-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:max-w-4xl">
          <h2 class="text-center text-pretty text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl">Vårt arbeid</h2>
          <p class="mt-2 text-center text-lg/8 text-gray-600">Vi bygger egne produkter, og hjelper våre kunder med å bygge sine</p>
          <div class="mt-16 space-y-20 lg:mt-20">
            {featuredArbeid.map((entry) => (
              <article class="relative isolate flex flex-col gap-8 lg:flex-row">
                <a href={`/arbeid/${entry.slug}`} class="relative aspect-video sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
                  <Image
                    src={entry.data.image}
                    alt={entry.data.title}
                    loading="lazy"
                    class="absolute inset-0 size-full rounded-2xl bg-gray-50 object-cover"
                    widths={[256, 512]}
                    sizes="256px"
                  />
                  <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
                </a>
                <div>
                  <div class="flex items-center gap-x-4 text-xs">
                    {entry.data.categories.map((category) => (
                      <span class="rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600">
                        {category}
                      </span>
                    ))}
                  </div>
                  <div class="group relative max-w-xl">
                    <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600">
                      <a href={`/arbeid/${entry.slug}`}>
                        <span class="absolute inset-0" />
                        {entry.data.title}
                      </a>
                    </h3>
                    <p class="mt-5 text-sm/6 text-gray-600">{entry.data.description}</p>
                  </div>
                  <div class="mt-6 flex border-t border-gray-900/5 pt-6">
                    <a
                      href={`/arbeid/${entry.slug}`}
                      class="text-sm/6 font-semibold text-indigo-600 hover:text-indigo-500"
                    >
                      Les mer <span aria-hidden="true">→</span>
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Testimonials Section -->
    <Testimonials />

    <!-- Blog Preview Section -->
    <div class="bg-white py-24 sm:py-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h2 class="text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl">Fra bloggen</h2>
          <p class="mt-2 text-lg/8 text-gray-600">Vi skriver om forretningsdrift, produktskapning og filosofi</p>
        </div>
        <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
          {latestPosts.map((post) => (
            <article class="flex flex-col items-start justify-between">
              <a href={`/blogg/${post.slug}`} class="relative w-full">
                <Image src={post.data.image} alt={post.data.title} loading="lazy" class="aspect-video w-full rounded-2xl bg-gray-100 object-cover sm:aspect-2/1 lg:aspect-3/2" widths={[400, 600, 800]} sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 400px" />
                <div class="absolute inset-0 rounded-2xl inset-ring inset-ring-gray-900/10"></div>
              </a>
              <div class="flex max-w-xl grow flex-col justify-between">
                <div class="mt-8 flex items-center gap-x-4 text-xs">
                  <time datetime={post.data.date.toISOString()} class="text-gray-500">
                    {post.data.date.toLocaleDateString('nb-NO', { year: 'numeric', month: 'short', day: 'numeric' })}
                  </time>
                  {post.data.categories.map((category) => (
                    <span class="rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600">{category}</span>
                  ))}
                </div>
                <div class="group relative grow">
                  <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600">
                    <a href={`/blogg/${post.slug}`}>
                      <span class="absolute inset-0"></span>
                      {post.data.title}
                    </a>
                  </h3>
                  <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600">{post.data.description}</p>
                </div>
                <div class="relative mt-8 flex items-center gap-x-4 justify-self-end">
                  {(() => {
                    const author = allAuthors.find(a => a.slug === post.data.author);
                    if (!author) return null;
                    return (
                      <>
                        <Image src={author.data.image} alt={author.data.name} loading="lazy" class="size-10 rounded-full bg-gray-100" widths={[40, 80]} sizes="40px" />
                        <div class="text-sm/6">
                          <p class="font-semibold text-gray-900">{author.data.name}</p>
                          <p class="text-gray-600">{author.data.role}</p>
                          {author.data.socials && (
                            <div class="flex gap-x-2 mt-1">
                              {author.data.socials.linkedin && (
                                <a href={author.data.socials.linkedin} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600">
                                  <span class="sr-only">LinkedIn</span>
                                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                                  </svg>
                                </a>
                              )}
                              {author.data.socials.github && (
                                <a href={author.data.socials.github} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600">
                                  <span class="sr-only">GitHub</span>
                                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
                                  </svg>
                                </a>
                              )}
                              {author.data.socials.x && (
                                <a href={author.data.socials.x} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600">
                                  <span class="sr-only">X</span>
                                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M13.6823 10.6218L20.2391 3H18.6854L12.9921 9.61788L8.44486 3H3.2002L10.0765 13.0074L3.2002 21H4.75404L10.7663 14.0113L15.5685 21H20.8131L13.6819 10.6218H13.6823ZM11.5541 13.0956L10.8574 12.0991L5.31391 4.16971H7.70053L12.1742 10.5689L12.8709 11.5655L18.6861 19.8835H16.2995L11.5541 13.096V13.0956Z"/>
                                  </svg>
                                </a>
                              )}
                              {author.data.socials.website && (
                                <a href={author.data.socials.website} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600">
                                  <span class="sr-only">Website</span>
                                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                                  </svg>
                                </a>
                              )}
                            </div>
                          )}
                        </div>
                      </>
                    );
                  })()}
                </div>
              </div>
            </article>
          ))}
        </div>
        <div class="mt-16 text-center">
          <a href="/blogg" class="text-sm/6 font-semibold text-indigo-600 hover:text-indigo-500">
            Se alle innlegg <span aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Newsletter Section -->
    <Newsletter />

    <Footer />
  </div>
</BaseLayout>
