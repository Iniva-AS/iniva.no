---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Newsletter from '../../components/Newsletter.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const entries = await getCollection('arbeid');
const sortedEntries = entries.sort((a, b) => a.data.order - b.data.order);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Arbeid', href: '/arbeid', current: true }
];
---

<BaseLayout title="Arbeid" description="Våre produkter, konsulentprosjekter og open source-bidrag.">
  <div class="bg-white">
    <Header />
    <Breadcrumb items={breadcrumbs} />

    <div class="bg-white pt-32 pb-24 sm:pt-40 sm:pb-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:max-w-4xl">
          <h2 class="text-pretty text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl">Vårt arbeid</h2>
          <p class="mt-2 text-lg/8 text-gray-600">Produkter vi bygger, konsulentprosjekter vi leverer, og open source vi bidrar til.</p>
          <div class="mt-16 space-y-20 lg:mt-20">
            {sortedEntries.map((entry) => (
              <article class="relative isolate flex flex-col gap-8 lg:flex-row">
                <a href={`/arbeid/${entry.slug}`} class="relative aspect-video sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
                  <Image
                    src={entry.data.image}
                    alt={entry.data.title}
                    loading="lazy"
                    class="absolute inset-0 size-full rounded-2xl bg-gray-50 object-cover"
                    widths={[256, 512]}
                    sizes="256px"
                  />
                  <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
                </a>
                <div>
                  <div class="flex items-center gap-x-4 text-xs">
                    {entry.data.categories.map((category) => (
                      <span class="rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600">
                        {category}
                      </span>
                    ))}
                  </div>
                  <div class="group relative max-w-xl">
                    <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600">
                      <a href={`/arbeid/${entry.slug}`}>
                        <span class="absolute inset-0" />
                        {entry.data.title}
                      </a>
                    </h3>
                    <p class="mt-5 text-sm/6 text-gray-600">{entry.data.description}</p>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Newsletter Section -->
    <Newsletter />

    <Footer />
  </div>
</BaseLayout>
